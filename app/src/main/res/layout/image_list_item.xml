<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:clickable="true"
              android:focusable="true"
              android:background="?android:attr/selectableItemBackground">

    <ProgressBar style="?android:attr/progressBarStyleSmall"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" android:id="@+id/progressBar2"
                 android:visibility="visible" android:indeterminate="true"
                 android:layout_gravity="center"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3" android:adjustViewBounds="true"
            android:cropToPadding="false" android:layout_gravity="center"
            android:scaleType="centerCrop"/>
</LinearLayout>